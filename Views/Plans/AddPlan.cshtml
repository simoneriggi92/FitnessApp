@using GymApp.Models.Entities
@model List<ExerciseViewModel>

<h1>Create your Plan</h1>
<link rel="stylesheet" href="css/styles.css"/>

<form method="post">
<div class="container mt-5 px-2">
  <div class="mb-2 d-flex justify-content-between align-items-center">
        
    <div class="position-relative">
      <span class="position-absolute search"><i class="fa fa-search"></i></span>
      <input class="form-control w-100" placeholder="Search by order#, name...">
    </div>
        
    <div class="px-2">
            
      <span>Filters <i class="fa fa-angle-down"></i></span>
      <i class="fa fa-ellipsis-h ms-3"></i>
    </div>
        
  </div>
  <div class="table-responsive">
    <table class="table table-responsive table-borderless">
        
      <thead>
      <tr class="bg-light">
        <th scope="col" width="5%"><input class="form-check-input" type="checkbox"></th>
        <th scope="col" width="5%">#</th>
        <th scope="col" width="20%">Date</th>
        <th scope="col" width="10%">Status</th>
        <th scope="col" width="20%">Name</th>
        <th scope="col" width="20%">Description</th>
        <th scope="col"  width="20%">Reps</th>
      </tr>
      </thead>
      <tbody>
      
      @foreach (var exercise in @Model)
      {
        <tr>
          <th scope="row">
            <input class="form-check-input" type="checkbox" asp-for="@exercise.Checked">
          </th>
          <td>@exercise.Id</td>
          <td>1 Oct, 21</td>
          <td><i class="fa fa-check-circle-o green"></i><span class="ms-1">Paid</span></td>
          <td>@exercise.Name</td>
          <td>@exercise.Description</td>
          <td>
            <select class="select">
              @foreach (var rep in @exercise.Reps)
              {
                @* <li><a class="dropdown-item" href="#">@rep.Type</a></li> *@
                <option value="1">@rep.Type</option>
              }
            </select>
          </td>
        </tr>
      }

      @* <tr> *@
      @*   <th scope="row"><input class="form-check-input" type="checkbox"></th> *@
      @*   <td>14</td> *@
      @*   <td>12 Oct, 21</td> *@
      @*   <td><i class="fa fa-dot-circle-o text-danger"></i><span class="ms-1">Failed</span></td> *@
      @*   <td><img src="https://i.imgur.com/nmnmfGv.png" width="25"> Tomo arvis</td> *@
      @*   <td>Altroz furry</td> *@
      @*   <td class="text-end"><span class="fw-bolder">$0.19</span> <i class="fa fa-ellipsis-h  ms-2"></i></td> *@
      @* </tr> *@
      @* *@
      @{
        var list = new List<string>();
        list.Add("");
        
      }
      </tbody>
    </table>
  
    <div class="col-md-2">
      <a class="btn btn-outline-primary" asp-action="CreatePlan" asp-route-exercises="@list">Create Plan</a>
    </div>
  </div>
    
</div>
</form>

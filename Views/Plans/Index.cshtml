@model UserViewModel

<h1>Dashboard</h1>





@for(int i = 0; i <= @Model.Plans.Count ;i++)
{
<div class="row">
   <div class="col-md-1">
    <img src="/profilo.jpeg" width="30">
   </div>
   <div class="col-md-3">
    <h2>Plan @i</h2>
    <author>@Model.FullName</author>
   </div>
    <div class="col-md-2">
    <h6>Creation date</h6>
        @Model.Plans[i].CreationDate.ToString()
    </div>
    <div class="col-md-2">
    <h6>Start date</h6>
        @Model.Plans[i].StartDate.ToString()
    </div>
   <div class="col-md-2">
    <h6>End Date</h6>
        @Model.Plans[i].EndDate.ToString()
    </div>
   <div class="col-md-2">
    <h6>Status</h6>
        @Model.Plans[i].Status.ToString()
   </div>
   <div class="col-md-2">
        <a class="btn btn-outline-primary" asp-action="CreatePlan"  asp-route-id ="1">Show the plan</a>
   </div>
</div>
}

